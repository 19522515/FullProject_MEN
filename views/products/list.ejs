<div class="container mt-5">
    <a type="button" class="btn btn-primary btn-lg" href="/product/add">Thêm sản phẩm mới</a>
    <h1>List Products</h1>
    <table class="table table-hover">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Thông tin sản phẩm</th>
            <th>Image</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Phân loại</th>
            <th>Sửa</th>
            <th>Xóa</th>
        </tr>
        <%
        products.map(pro=>{%>
            <tr>
                <td><%=  pro.name %></td>
                <td><%=  pro.info %></td>
                <td><img src="<%= pro.imageSrc %>" alt ="" width="50px"></td>
                <td><%=  pro.price %></td>
                <td><%=  pro.quantity %></td>
                <td>
                    <%
                    if(pro.category){%>
                        <%=  pro.category.name %>
                    <%}
                    %>
                </td>
                <td><a href="/category/edit/<%= pro._id %>" class="btn btn-warning">Sửa</a></td>
                <td> <%- include('../part/deleteForm',{url:`/product/delete/${pro._id}`}) %></td>
            </tr>
        <%})
        %>
        
    </table>
</div>