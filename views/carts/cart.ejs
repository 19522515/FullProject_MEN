<div class="container mt-5">
    <h1>Cart</h1>
    <table class="table table-hover">
        <tr>
            <th>Tên Loại Sản Phẩm</th>
            <th>Giá tiền </th>
            <th>Hình ảnh hàng </th>
            <th>Chỉnh Sửa </th>
            <th>Xóa</th>
        </tr>
        <%
        cart.map(x =>{%>
            <tr id="tr cart_<%= x.id %>">
                <td>
                    <%=  x.item.name %>
                </td>
                <td>
                    <%=  x.item.price %>
                </td>
                <td><img src="<%= x.imageSrc %>" alt="" width="50px"></td>
                <td>
                    <div class="d-flex">
                <form action="/cart/reduce/<%= x.id %>?_method=PUT" method="POST" data-id="<%= x.id %>" class="reduceFormCart">
                    <input type="submit" value="-" class="btn btn-info" style="margin-right: 9px;padding-left:7px;padding-top: 1px;">
                </form>
                <span id="qty<%= x.id %>"><span id="qty2<%= x.id %>"><%= x.qty %></span></span>
                <form action="/cart/increase/<%= x.id %>?_method=PUT" method="POST" data-id="<%= x.id %>" class="increaseFormCart">
                    <input type="submit" value="+" class="btn btn-info"  style="margin-left: 9px;padding-left:7px;padding-top: 1px;">
                </form>
            </div>
                </td>
                <td> 
                    <form action="/cart/<%= x.id %>?_method=DELETE" method="POST" data-id="<%= x.id %>" class="deleteFormCart">
                        <input type="submit" value="Xóa" class="btn btn-danger">
                    </form>
                </td>
            </tr>
            <%})
        %>
    </table>
    <h1>Total Price: <span id="total"><span id="total2"><%= total %> đ</span></span></h1>
</div>